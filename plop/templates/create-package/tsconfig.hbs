{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@enum/*": ["src/enum/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["src/assets/*"],
    },
  },
  "files": ["src/index.ts"],
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
